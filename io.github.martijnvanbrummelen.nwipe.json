{
    "app-id" : "io.github.martijnvanbrummelen.nwipe",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "command" : "nwipe",
    "tags" : [
        "nightly"
    ],
    "finish-args" : [
            "--filesystem=home",
            "--filesystem=/usr/include"
    ],
    "build-options" : {
        "build-args" : [
            "--share=network",
            "--filesystem=home",
            "--filesystem=/usr/include"
        ],
        "env" : {
            "G_MESSAGES_DEBUG" : "none"
        }
    },
    "modules" : [
        {
              "name": "libaio",
              "cleanup": [ "*" ],
              "buildsystem" : "simple",
              "build-commands" : [
                "sed -i '/install.*libaio.a/s/^/#/' src/Makefile",
                "make",
                "make install"
              ],
              "config-opts": [
              ],
              "sources": [
                  {
                      "type": "archive",
                      "url": "http://ftp.de.debian.org/debian/pool/main/liba/libaio/libaio_0.3.112.orig.tar.xz",
                      "md5": "66e3b7dd255581a73542ee851f8cd737"
                  }
              ]
         },

        {
              "name": "libdevmapper",
              "cleanup": [ "*" ],
              "config-opts": [
              ],
              "sources": [
                  {
                      "type": "git",
                      "url": "https://sourceware.org/git/lvm2.git",
                      "branch": "master"
                  }
              ]
         },
        {
            "name" : "gparted",
            "buildsystem" : "autotools",
            "config-opts" : [
                "--disable-device-mapper"
            ],
            "cleanup" : [
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/GNOME/gparted.git",
                    "branch" : "master"
                }
            ],
            "modules": [
                {
                    "name" : "gnome-common",
                    "buildsystem" : "autotools",
                    "config-opts" : [
                    ],
                    "sources" : [
                        {
                            "type" : "git",
                            "url" : "https://github.com/GNOME/gnome-common.git",
                            "branch": "master"
                        }
                    ]
                },
                {
                    "name": "intltool",
                    "cleanup": [ "*" ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://launchpad.net/intltool/trunk/0.51.0/+download/intltool-0.51.0.tar.gz",
                            "sha256": "67c74d94196b153b774ab9f89b2fa6c6ba79352407037c8c14d5aeb334e959cd"
                        }
                    ]
               },
              {
                    "name": "parted",
                    "cleanup": [ "*" ],
                    "config-opts": [
                      "--disable-device-mapper"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://ftp.gnu.org/gnu/parted/parted-3.3.tar.xz",
                            "sha256": "57e2b4bd87018625c515421d4524f6e3b55175b472302056391c5f7eccb83d44"
                        }
                    ]
               }

            ]
        },
        {
            "name" : "nwipe",
            "buildsystem" : "autotools",
            "config-opts" : [
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/louib/nwipe.git",
                    "branch": "flatpak"
                }
            ]
        }
    ]
}
